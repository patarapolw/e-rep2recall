    "typescript": "^3.3.3333",
    "electron": "^4.0.8",
    "electron-builder": "^20.38.5"
  },
  "scripts": {
    "start": "electron ./dist/main.min.js",
    "dev": "rimraf dist && webpack --watch --config ./webpack.dev.js --progress --colors",
    "compile": "rimraf dist && webpack --config ./webpack.prod.js --progress --colors",
    "build": "rimraf build && yarn run compile && electron-builder"
  },
  "build": {
    "appId": "io.github.patarapolw.rep2recall",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.png"
    },
    "fileAssociations": [
      {
        "ext": "r2r",
        "role": "Editor"
      }
    ],
    "files": [
      "dist/**/*",
      "package.json",
      "views/**/*",
      "public/**/*",
      "dist/node_modules/**/*"
    ]
  }
}
