    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "scripts": {
    "start": "yarn run serve",
    "serve": "node -r esm build/server.js",
    "build": "rimraf dist && webpack --config webpack.dev.js",
    "dev": "concurrently 'yarn run serve:watch' 'yarn run front:watch'",
    "serve:watch": "rimraf build && concurrently 'yarn run tsc' 'wait-on build/server.js && nodemon -w build -r esm build/server.js'",
    "front:watch": "rimraf dist && webpack --watch --config webpack.dev.js",
    "electron:start": "electron .",
    "electron:compile": "rimraf dist && webpack --config ./webpack.prod.js --progress --colors",
    "electron:build": "rimraf build && yarn run electron:compile && electron-builder",
    "tsc": "cd src/backend && tsc -w"
  },
  "build": {
    "appId": "io.github.patarapolw.rep2recall",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.png"
    },
    "fileAssociations": [
      {
        "ext": "r2r",
        "role": "Editor"
      }
    ],
    "files": [
      "dist/**/*",
      "package.json",
      "views/**/*",
      "public/**/*",
      "dist/node_modules/**/*"
    ]
  }
}
