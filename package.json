    "name": "Pacharapol Withayasakpunt",
    "email": "patarapolw@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@lokidb/fs-storage": "^2.0.0-beta.8",
    "@lokidb/loki": "^2.0.0-beta.8",
    "@types/adm-zip": "^0.4.32",
    "@types/busboy": "^0.2.3",
    "@types/parsimmon": "^1.10.0",
    "@types/pump": "^1.1.0",
    "@types/rimraf": "^2.0.2",
    "@types/sql.js": "^0.0.29",
    "@types/uuid": "^3.4.4",
    "@types/xregexp": "^3.0.30",
    "adm-zip": "^0.4.13",
    "appdirs": "^1.1.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "fastify": "^2.4.1",
    "fastify-cors": "^2.1.3",
    "fastify-multipart": "^1.0.0",
    "fastify-static": "^2.4.0",
    "make-promises-safe": "^5.0.0",
    "moment": "^2.24.0",
    "parsimmon": "^1.12.0",
    "pump": "^3.0.0",
    "rimraf": "^2.6.3",
    "sql.js": "^0.5.0",
    "xregexp": "^4.2.4"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "@types/hyperscript": "^0.0.3",
    "@types/jquery": "^3.3.29",
    "@types/showdown": "^1.9.3",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.18",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "electron": "^4.0.8",
    "electron-builder": "^20.38.5",
    "esm": "^3.2.22",
    "expose-loader": "^0.7.5",
    "file-loader": "^3.0.1",
    "flatpickr": "^4.5.7",
    "hyperscript": "^2.0.2",
    "jquery": "^3.4.0",
    "jquery-contextmenu": "^2.8.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "popper.js": "^1.15.0",
    "raw-loader": "^2.0.0",
    "sass-loader": "^7.1.0",
    "showdown": "^1.9.0",
    "style-loader": "^0.23.1",
    "sweetalert": "^2.1.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.1.0",
    "typescript": "3.3.4000",
    "uuid": "^3.3.2",
    "vue": "^2.6.10",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.0.5",
    "wait-on": "^3.2.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.5.1"
  },
  "scripts": {
    "start": "yarn run dev",
    "dev": "concurrently 'yarn run js:dev' 'yarn run node:dev'",
    "js:dev": "webpack-dev-server --config webpack.dev.js",
    "node:dev": "rimraf build && concurrently 'yarn run tsc:watch' 'wait-on build/server.js && nodemon -r esm build/server.js'",
    "build": "rimraf dist build && webpack --config webpack.prod.js",
    "electron:start": "electron .",
    "electron:build": "yarn run build && electron-builder",
    "tsc": "cd src/node && tsc",
    "tsc:watch": "cd src/node && tsc -w"
  },
  "build": {
    "appId": "io.github.patarapolw.rep2recall",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.png"
    },
    "fileAssociations": [
      {
        "ext": "r2r",
        "role": "Editor"
      }
    ],
    "files": [
      "dist/**/*",
      "package.json",
      "views/**/*",
      "public/**/*",
      "dist/node_modules/**/*"
    ]
  }
}
